<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity"
          prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
          fx:controller="userinterface.EditWindowController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label text="Name"/>
        <Label text="Type" GridPane.rowIndex="1"/>
        <Label text="Origin" GridPane.rowIndex="2"/>
        <Label text="Info" GridPane.rowIndex="3"/>
        <Label text="Alc%" GridPane.rowIndex="4"/>
        <TextField fx:id="nameTextField" maxWidth="-Infinity" prefWidth="200.0" GridPane.columnIndex="1"/>
        <TextField fx:id="typeTextField" maxWidth="-Infinity" prefWidth="200.0" GridPane.columnIndex="1"
                   GridPane.rowIndex="1"/>
        <TextField fx:id="originTextField" maxWidth="-Infinity" prefWidth="200.0" GridPane.columnIndex="1"
                   GridPane.rowIndex="2"/>
        <TextField fx:id="infoTextField" maxWidth="-Infinity" prefWidth="200.0" GridPane.columnIndex="1"
                   GridPane.rowIndex="3"/>
        <TextField fx:id="alcTextField" maxWidth="-Infinity" prefWidth="200.0" GridPane.columnIndex="1"
                   GridPane.rowIndex="4"/>
        <ToolBar GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="8"
                 GridPane.valignment="CENTER">
            <items>
                <Button onAction="#cancelButtonClicked" fx:id="cancelButton" mnemonicParsing="false" text="Cancel"/>
                <Button onAction="#okButtonClicked" fx:id="okButton" mnemonicParsing="false" text="OK"/>
            </items>
        </ToolBar>
    </children>
    <padding>
        <Insets left="20.0"/>
    </padding>

    <stylesheets>
        <URL value="@../assets/css/root.css"/>
    </stylesheets>

</GridPane>
